---
import "/src/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro";
import "@fontsource/poppins";
import Footer from "@/components/Footer.astro";

const { title = "Adrián Palomo | Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#444444" />
    <meta
      name="description"
      content="Portfolio personal de Adrián Palomo - Desarrollador Salesforce Full Stack"
    />
    <meta
      name="keywords"
      content="desarrollador, programador, full stack, portfolio, web development, salesforce developer, javascript developer, platform developer, salesforce admin, salesforce consultant, LWC, Apex, Salesforce"
    />
    <meta name="author" content="Adrián Palomo" />
    <meta name="robots" content="index, follow" /><link
      rel="canonical"
      href="https://adrianpalomo.com/"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://adrianpalomo.com/" />
    <meta property="og:title" content="Adrián Palomo | Portfolio" />
    <meta property="og:site_name" content="Adrián Palomo | Portfolio" />
    <meta
      property="og:description"
      content="Portfolio personal de Adrián Palomo - Desarrollador Salesforce Full Stack"
    />
    <meta property="og:image" content="https://www.adrianpalomo.com/og.webp" />
    <meta property="og:locale" content="es_ES" />

    <!-- Apple -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="Adrián Palomo" />

    <!-- Microsoft -->
    <meta name="msapplication-TileColor" content="#444444" />
    <meta name="msapplication-config" content="none" />

    <link rel="icon" type="image/png" href="/images/Fav.webp" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="relative flex min-h-dvh justify-center">
    <!-- Fondo fijo para iOS -->
    <div class="bg-wrap">
      <div class="bg"></div>
    </div>

    <div
      class="relative flex min-h-screen w-full max-w-xl flex-col gap-6 p-6 md:max-w-4xl lg:max-w-5xl xl:w-7xl xl:max-w-7xl"
    >
      <div class="flex h-[95px] w-full justify-center">
        <Header />
      </div>
      <div class="mb-auto flex w-full justify-center">
        <slot />
      </div>
      <div class="flex w-full justify-center">
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    font-family: "Poppins", sans-serif;
  }

  /* Contenedor del fondo, posicionado detrás del contenido */
  .bg-wrap {
    clip: rect(0, auto, auto, 0);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 100%;
    z-index: -1;
  }

  /* Imagen de fondo fija */
  .bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100dvw;
    height: 100dvh;
    background-size: cover;
    background-position: center center;
    background-image: url("/src/assets/bg5.svg");
    transform: translateZ(0);
    will-change: transform;
  }
</style>
