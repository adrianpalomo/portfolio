---
import "/src/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro";
import "@fontsource/poppins";
import Footer from "@/components/Footer.astro";
import SEO from "@/components/SEO.astro";
import type { Preload } from "@/types/Preload";

interface Props {
  title: string;
  description: string;
  preload?: Array<Preload>;
  canonical?: string;
  image?: string;
}

const { title, description, preload, canonical, image } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <SEO
      canonical={canonical}
      description={description}
      image={image}
      preload={preload}
      title={title}
    />
    <ClientRouter />
  </head>
  <body class="relative flex min-h-dvh justify-center">
    <!-- Fondo fijo para iOS -->
    <div class="bg-wrap">
      <div class="bg"></div>
    </div>

    <div
      class="relative flex min-h-screen w-full max-w-xl flex-col gap-6 p-6 md:max-w-4xl lg:max-w-5xl xl:w-7xl xl:max-w-7xl"
    >
      <div class="flex h-[95px] w-full justify-center">
        <Header />
      </div>
      <div class="mb-auto flex w-full justify-center">
        <slot />
      </div>
      <div class="flex w-full justify-center">
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    font-family: "Poppins", sans-serif;
  }

  /* Contenedor del fondo, posicionado detr√°s del contenido */
  .bg-wrap {
    clip: rect(0, auto, auto, 0);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 100%;
    z-index: -1;
  }

  /* Imagen de fondo fija */
  .bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100dvw;
    height: 100dvh;
    background-size: cover;
    background-position: center center;
    background-image: url("/src/assets/bg5.svg");
    transform: translateZ(0);
    will-change: transform;
  }
</style>
