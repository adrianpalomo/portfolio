---
interface Props {
  title: string;
  description: string;
  img?: string;
  author: string;
}

const { title, description, img, author } = Astro.props;
---

<section>
  <div class="flex flex-col w-full h-full gap-10 p-6">
    <h1 class="text-3xl font-bold text-center">{title}</h1>
    <div class="flex flex-col w-full h-full text-center">
      {description}
    </div>
  </div>
</section>
