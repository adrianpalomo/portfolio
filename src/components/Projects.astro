---
import ProjectsSlot from "@/components/ProjectsSlot.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<script is:inline data-astro-rerun type="module">
  import EmblaCarousel from "/node_modules/embla-carousel";
  import Autoplay from "/node_modules/embla-carousel-autoplay";

  const OPTIONS = { align: "start", loop: true };
  console.log({ OPTIONS });

  const emblaNode = document.querySelector(".embla");
  const viewportNode = emblaNode.querySelector(".embla__viewport");

  const emblaApi = EmblaCarousel(viewportNode, OPTIONS, [Autoplay()]);
</script>

<section class="flex h-full w-full items-center justify-center">
  <div class="embla h-full w-full">
    <div class="embla__viewport h-full overflow-hidden">
      <div
        class="ml-[calc(var(--slide-spacing)*-1)] flex h-full touch-pan-y touch-pinch-zoom"
      >
        {
          projects.map((project) => {
            return (
              <section class="embla__slide">
                <div class="embla__slide__number flex h-full items-center justify-center rounded-lg bg-black/50 select-none">
                  <a
                    class="flex h-full w-full flex-col"
                    href={`/projects/${project.id}`}
                  >
                    <ProjectsSlot {...project.data} />
                  </a>
                </div>
              </section>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  .embla {
    --slide-height: 19rem;
    --slide-spacing: 1rem;
    --slide-size: 90%;
  }

  @media (min-width: 768px) {
    .embla {
      --slide-size: 45%;
      --slide-spacing: 1.5rem;
    }
  }

  .embla__slide {
    transform: translate3d(0, 0, 0);
    flex: 0 0 var(--slide-size);
    min-width: 0;
    padding-left: var(--slide-spacing);
  }
</style>
