---
import ProjectsSlot from "@/components/ProjectsSlot.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<script>
  import EmblaCarousel from "embla-carousel";
  import Autoplay from "embla-carousel-autoplay";
  import { WheelGesturesPlugin } from "embla-carousel-wheel-gestures";

  document.addEventListener("astro:page-load", () => {
    const OPTIONS = {
      align: "start" as const,
      loop: true,
    };

    const emblaNode = document.querySelector(".embla");
    const viewportNode = emblaNode?.querySelector(
      ".embla__viewport",
    ) as HTMLElement;

    if (viewportNode) {
      const emblaApi = EmblaCarousel(viewportNode, OPTIONS, [
        Autoplay({
          delay: 2000,
          stopOnMouseEnter: true,
          stopOnInteraction: false,
        }),
        WheelGesturesPlugin(),
      ]);
    }
  });
</script>

<section
  class="order-2 h-full w-full rounded-lg bg-black/45 shadow-[0px_0px_32px_-3px_#080808] backdrop-blur-sm transition-transform duration-300 md:order-2 md:col-span-3 md:row-span-2 xl:col-span-5 xl:row-span-3"
  transition:name="projectsDetail"
>
  <div class="embla h-full w-full">
    <div class="embla__viewport h-full overflow-hidden">
      <div
        class="embla__container ml-[calc(var(--slide-spacing)*-1)] flex h-full touch-pan-y touch-pinch-zoom"
      >
        {
          projects.map((project) => {
            return (
              <section class="embla__slide">
                <div class="embla__slide__numbers flex h-full items-center transition-all duration-300 select-none hover:bg-black/10">
                  {/* href={`/projects/${project.id}`} */}
                  <div class="hover:text-theme-text-light flex h-full w-full flex-col p-4">
                    <ProjectsSlot {...project.data} />
                  </div>
                </div>
              </section>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  .embla {
    --slide-height: 19rem;
    --slide-spacing: 0rem;
    --slide-size: 90%;
  }

  @media (min-width: 768px) {
    .embla {
      --slide-size: 45%;
      --slide-spacing: 0rem;
    }
  }

  .embla__slide {
    transform: translate3d(0, 0, 0);
    flex: 0 0 var(--slide-size);
    min-width: 0;
    padding-left: var(--slide-spacing);
  }
</style>
